<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>

  <property>
    <name>tachyon.archive.url</name>
    <description>tachyon archive file</description>
    <value>https://github.com/seraphin/tachyon-service/blob/master/package/files/</value>
  </property>

  <property>
    <name>tachyon.package.dir</name>
    <description>tachyon package dir</description>
    <value>/var/lib/ambari-agent/cache/stacks/HDP/2.2/services/tachyon-service/package/</value>
  </property>

  <property>
    <name>tachyon.archive.file</name>
    <description>tachyon archive file</description>
    <value>tachyon-0_5_0-hdp-2_2_4.tar.gz</value>
  </property>

  <property>
    <name>tachyon.service.repo</name>
    <description>tachyon service git repo</description>
    <value>https://github.com/seraphin/tachyon-service</value>
  </property>

  <property>
    <name>tachyon.stack.dir</name>
    <description>Stack Directory</description>
    <value>/var/lib/ambari-server/resources/stacks/HDP/2.2/services/tachyon-service</value>
  </property>

  <property require-input="true">
    <name>tachyon.master.address</name>
    <description>node where master server is deployed</description>
    <value></value>
  </property>

  <property require-input="true">
    <name>tachyon.underfs.address</name>
    <description>Tachyon UnderFS Address</description>
    <value></value>
  </property>

  <property>
    <name>tachyon.worker.memory</name>
    <description>Tachyon Worker Memory</description>
    <value>1GB</value>
  </property>

  <property>
    <name>tachyon.log.dir</name>
    <description>Tachyon Log Directory</description>
    <value>/var/log/tachyon/</value>
  </property>
	
  <property>
    <name>hdp.install.path</name>
    <description>path to hdp install</description>
    <value>/usr/hdp/2.2.4.2-2/tachyon/</value>
  </property>

</configuration>
